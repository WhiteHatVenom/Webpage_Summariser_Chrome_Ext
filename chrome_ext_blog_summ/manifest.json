{
    "manifest_version": 3,
    "name": "Blog Summarizer",
    "version": "1.0",
    "description": "Summarize and download blog content",
    "permissions": ["activeTab", "scripting", "downloads"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  